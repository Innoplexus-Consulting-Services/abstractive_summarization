<RootWidget>:
    BoxLayout:
        orientation: 'horizontal'
		canvas.before:
			Rectangle:
				# source: './static/sexy_back.jpg'
				# source: 'd.jpg'
				source: './static/background.jpg'
				size: self.size
				pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            id: layout
			size_hint: (0.6,1)
			spacing: 10
			padding: [10, 0, 10, 0]


            # '''Label:
            #     text: 'Text Summarization is Awesome!! :D'
            #     text_size: self.width, None
			# 	color: (0, 0, 0, 2)
			# 	font_size: '20sp'
			# 	halign: 'left'
			# 	valign: 'bottom'
			# 	size_hint: (.2, .5)
			# 	pos_hint: {'top': 0.5 + self.size_hint[1]/2}
            # '''

            BoxLayout:
                orientation: 'vertical'
                size_hint: (1,0.9)
                id: input_text
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1,0.1)
                    Label:
                        text : "Input data is here"
                        color : (0,0,0,2)
                        size: self.size
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1,0.9)
                    TextInput:
                        multiline : True
                        # size_hint : (None,None)
                        hint_text : "INPUT TEXT HERE"
                        size: self.size



            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1,0.1)
                id: input_btn
                Button:
                    text : "prev"
                    size_hint : (0.5,1)
                    height : 30
                Button
                    text : "next"
                    size_hint : (0.5,1)
                    height : 30

        BoxLayout:
            orientation: 'vertical'
            id: layout
			size_hint: (0.4,1)
			spacing: 10
			padding: [10, 0, 10, 0]

            BoxLayout:
                orientation: 'vertical'
                id: input_abs
                size_hint: (1,0.45)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1,0.1)
                    Label:
                        text : "Input abstract is here"
                        color : (0,0,0,2)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1,0.9)
                    TextInput:
                        multiline : True
                        # size_hint : (None,None)
                        hint_text : "INPUT ABSTRACT HERE"

            BoxLayout:
                orientation: 'vertical'
                id: output_text
                size_hint: (1,0.45)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1,0.1)
                    Label:
                        text : "Output data is here"
                        color : (0,0,0,2)
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1,0.9)
                    TextInput:
                        multiline : True
                        hint_text : "OUTPUT TEXT HERE"

            BoxLayout:
                size_hint: (1,0.1)
                orientation: 'horizontal'
                id: summ_btn
                Button:
                    text : "Summarize"
                    size_hint : (1,1)

