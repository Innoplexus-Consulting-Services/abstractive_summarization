<RootWidget>:
    BoxLayout:
        orientation: 'horizontal'
		canvas.before:
			Rectangle:
				# source: './static/sexy_back.jpg'
				# source: 'd.jpg'
				source: './static/background.jpg'
				size: self.size
				pos: self.pos
        BoxLayout:
            id: layout
			size_hint_y: (.5,1)
			spacing: 10
			padding: [10, 0, 10, 0]

            Label:
                text: 'Text Summarization is Awesome!! :D'
                text_size: self.width, None
				color: (0, 0, 0, 2)
				font_size: '20sp'
				halign: 'left'
				valign: 'bottom'
				size_hint: (.2, .5)
				pos_hint: {'top': 0.5 + self.size_hint[1]/2}

        BoxLayout:
            id: layout
			size_hint_y: (.5,1)
			spacing: 10
			padding: [10, 0, 10, 0]

            Label:
                text: 'This is the Generated Text! :D '
				text_size: self.width, None
				color: (0, 0, 0, 2)
				font_size: '20sp'
				halign: 'left'
				valign: 'bottom'
				size_hint: (.2, .5)
				pos_hint: {'top': 0.5 + self.size_hint[1]/2}
